<Window x:Class="wpfPracticas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33" />
            <RowDefinition Height="255*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="1" Height="Auto" HorizontalAlignment="Left" Margin="0" Name="richTextBox1"  Width="Auto" />
        <StatusBar Grid.Row="2" Height="20" HorizontalAlignment="Left" Margin="5,0,0,0" Name="statusBar1" VerticalAlignment="Top" Width="Auto" />
        <Menu Height="Auto" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="Auto" Grid.Row="0">
            <MenuItem Header="Archivo" DataContext="{Binding}" InputGestureText="" Height="20" Width="80">
                <MenuItem Command="ApplicationCommands.New" Header="Nuevo" InputGestureText="" />
                <MenuItem Command="ApplicationCommands.Save" Header="Guardar" />
                <MenuItem Command="ApplicationCommands.Open" Header="Abir" InputGestureText="" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
